@using TravelStar.Site.Models.Account
@model ManageAccountRolesViewModel

@{
    ViewData["Title"] = "Account list page";
}

<div class="card border-info">
    <div class="card-body text-info">
        <div class="row mb-3">
            <div class="col-12">
                <h3>Tài khoản @Model.Email</h3>
            </div>
        </div>
        <form action="@Url.Action("update", "accountrole")" id="account_roles_form" class="d-inline">
            <input asp-for="@Model.UserId" type="hidden">
            <table id="account_table" class="table table-striped table-bordered" width="100%">
                <thead>
                    <tr>
                        <th>Role</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.AccountRoles!.Count(); i++)
                    {
                        <tr>
                            <td>
                                <input asp-for="@Model.AccountRoles![i].RoleName" type="hidden" />
                                @Model.AccountRoles![i].RoleName
                            </td>
                            <td>
                                <div class="form-check m-1">
                                    <input asp-for="@Model.AccountRoles[i].Selected" class="form-check-input">
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <div class="col-sm-12 text-center">
                <button type="submit" class="btn btn-info">Lưu</button>
            </div>
        </form>
    </div>
</div>
@section Scripts{
    <script src="~/js/Account/AccountRoles.js"></script>
}


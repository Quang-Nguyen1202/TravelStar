@using TravelStar.Entities

<div class="row mt-3">
    <div class="col-3 offset-2">
        <div class="form-group check-date">
            <label for="date-in">From:</label>
            <input type="datetime" autocomplete="off" class="form-control search-date-input" id="from-date" name="fromDate">
        </div>
    </div>

    <div class="col-3">
        <div class="form-group check-date">
            <label for="date-in">To:</label>
            <input type="datetime" autocomplete="off" class="form-control search-date-input" id="to-date" name="toDate">
        </div>
    </div>

    <div class="col-2" style="margin-top: 32px">
        <button type="button" class="btn btn-info" onclick="Revenue.search()">Search</button>
    </div>
</div>

<div class="card-body text-info">
    <div class="row">
        <div class="col-6">
            <b id="total-price"></b>
        </div>

        <div class="col-6 text-right">
            <button type="button" class="btn btn-info" onclick="Revenue.exportExcel()">Export Excel</button>
        </div>
    </div>
   
    <div class="mt-3">
        <table id="revenue_table" class="table table-striped table-bordered mt-3" width="100%">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Customer Email</th>
                    <th>Hotel Name</th>
                    <th>Room Name</th>
                    <th>Check In Date</th>
                    <th>Check Out Date</th>
                    <th>Total Price ($)</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts{
    <script src="js/Revenue/Revenue.js"></script>
}

@*<!-- Modal -->
<partial name="_AddHotelModal" model="@Model" />*@
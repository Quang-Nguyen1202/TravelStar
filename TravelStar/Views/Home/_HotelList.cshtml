@using TravelStar.Site.Models.Home
@using TravelStar.Site.Models.Hotel
@model SearchViewModel
@if (Model.HotelList.Count() > 0)
{
    @foreach (HotelViewModel hotel in Model.HotelList)
    {
        <div class="card mb-3 card_hotel">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3">
                        <img src="~/images/1/hotel1.png" class="img-fluid" alt="...">
                    </div>
                    <div class="col-md-6">
                        <h5 class="font-weight-bold">@hotel.Name</h5>
                        <i class="fa-solid fa-star" style="color: #ffe000"></i><i class="fa-solid fa-star ml-1" style="color: #ffe000"></i><i class="fa-solid fa-star ml-1" style="color: #ffe000"></i>

                        <p class="mt-3"><i class="fa-solid fa-location-dot"></i> @hotel.Address, @hotel.Ward, @hotel.District, @hotel.City</p>

                        <a href="javascript:;" class="text-info" onclick="Hotel.selectRow(@hotel.Id)">More Details</a>
                    </div>
                    <div class="col-md-3 align-bottom">
                        <h4 style="color: orangered">@hotel.MinPrice USD</h4>
                    </div>
                </div>
            </div>
        </div>
    }
}
else
{
    <h5>This room has sold out</h5>
}
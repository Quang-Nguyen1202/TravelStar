    ViewData["Title"] = "Account list page";
}

<div class="card-body text-info">
    <div class="row mb-3">
        <div class="col-12 text-right">
            <button type="button" class="btn btn-info" id="add_account_btn">Thêm tài khoản</button>
        </div>
    </div>

    <table id="account_table" class="table table-striped table-bordered" width="100%">
        <thead>
            <tr>

<div class="modal fade text-info" id="edit_account_modal" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">Chỉnh sửa tài khoản</h5>
                <button type="button" class="close close_modal" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form action="@Url.Action("EditAccount", "Account")" method="post" id="edit_account_form">
                <div class="modal-body">
                    <div class="form-group row">
                        <label for="name" class="col-3 col-form-label text-right pr-0">Họ và tên</label>
                        <div class="col-8">
                            <input type="text" class="form-control" id="user_full_name" name="UserFullName" placeholder="Họ và tên nhân viên">
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="email" class="col-3 col-form-label text-right pr-0">Email</label>
                        <div class="col-8">
                            <input type="email" class="form-control" id="email" name="Email" placeholder="Email">
                        </div>
                    </div>
                    <input id="Id" name="Id" type="text" hidden>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-info">Lưu</button>
                    <button type="button" class="btn btn-secondary close_modal" data-dismiss="modal">Đóng</button>
                </div>
            </form>
        </div>
    </div>
</div>
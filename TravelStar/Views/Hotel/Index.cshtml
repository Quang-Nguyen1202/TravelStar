@using TravelStar.Entities

@model AppUser

<div class="card-body text-info">
    <div class="row mb-3">
        <div class="col-12 text-right">
            <button type="button" class="btn btn-info" id="add_hotel_btn" data-bs-toggle="modal" data-bs-target="#add_hotel_modal" onclick="Hotel.showModalAddHotel()">Add Hotel</button>
        </div>
    </div>

    <table id="hotel_table" class="table table-striped table-bordered" width="100%">
        <thead>
            <tr>
                <th>No</th>
                <th>Owner Hotel</th>
                <th>Name Hotel</th>
                <th>Phone</th>
                <th>Address</th>
                <th>Ward</th>
                <th>District</th>
                <th>City</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>

<!-- Modal -->
<partial name="_AddHotelModal" model="@Model"/>

@section Scripts{
    <script src="~/js/Hotel/Hotel.js"></script>
}
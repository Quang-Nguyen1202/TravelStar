@using TravelStar.Model
@model HotelModel
<!-- Modal -->
<div class="modal fade" id="booking_room_modal" data-backdrop="static" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="title_add_room_modal">Booking room</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form class="row g-3" action="@Url.Action("createbooking", "Hotel")" method="post" id="booking_room_form">
                    <div class="form-group col-md-12">
                        <label for="name_room">Email</label>
                        <input type="text" class="form-control" id="email" name="CustomerEmail" placeholder="Enter your email">
                    </div>

                    <div class="form-group col-md-12">
                        <label for="name_room">Phone number</label>
                        <input type="text" class="form-control" id="phone" name="CustomerPhone" placeholder="Enter your phone number">
                    </div>

                    <div class="form-group col-md-12">
                        <div class="row">
                            <div class="col-md-6">
                                <label for="name_room">Check-in date</label>
                                <input type="text" class="form-control" id="check_in_date" name="CheckInDate" value="@Model.CheckInDate!.Value.Date.ToLongDateString()" readonly>
                            </div>
                            <div class="col-md-6">
                                <label for="name_room">Check-out date</label>
                                <input type="text" class="form-control" id="check_out_date" name="CheckOutDate" value="@Model.CheckOutDate!.Value.Date.ToLongDateString()"  readonly>
                            </div>
                        </div>
                    </div>
                    <div class="form-group col-md-12">
                        <label for="pay">Phương thức thanh toán </label>
                        <select id="pay" class="form-control" name="pay">
                            <option value="1" selected>Thanh toán tại khách sạn</option>
                            <option value="2">Thanh toán Paypal</option>
                        </select>
                    </div>

                    <div class="form-group col-md-12 mt-4">
                        <div class="row">
                            <div class="col-md-6">
                                <h6>Total Price</h6>
                            </div>
                            <div class="col-md-6 text-right">
                                <h6 class="text-left" id="booking-room-price"></h6>
                            </div>
                        </div>
                    </div>

                    <input type="text" class="form-control" id="room_id_txb" name="RoomId" hidden>
                    <input type="text" class="form-control" id="total_price_txb" name="TotalPrice" hidden>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-primary" id="save_booking_room_btn" onclick="Room.processBooking()">Countinue</button>
                
            </div>
        </div>
    </div>
</div>

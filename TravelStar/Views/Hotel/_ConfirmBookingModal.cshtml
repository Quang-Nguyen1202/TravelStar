<!-- Modal -->
<div class="modal fade" id="confirm_booking_modal" data-backdrop="static" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="title_confirm_booking_modal">Confirm booking</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form class="row g-3" action="@Url.Action("confirmbooking", "Hotel")" method="post" id="confirm_booking_form">
                    <div class="form-group col-md-12 text-center">
                        <label for="confirm_code">Mã xác nhận đã được gửi về email của bạn, vui lòng kiểm tra và điền mã xác nhận vào bên dưới.</label>
                        <input type="text" class="form-control" id="confirm_code" name="confirmCode" placeholder="Enter your code">

                        <input type="text" class="form-control" id="booking_id" name="bookingId" hidden>
                        <input type="text" class="form-control" id="customer_email" name="customerEmail" hidden>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-primary" id="save_booking_room_btn" onclick="Room.checkBookingConfirm()">Confirm</button>
            </div>
        </div>
    </div>
</div>
